<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
  <title>Justin Burns NFT Mint</title>

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <!-- Google Font -->
  <link
    href="https://fonts.googleapis.com/css2?family=Contrail+One&display=swap"
    rel="stylesheet"
  />

  <!-- p5.js -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.4.0/p5.js"></script>

  <style>
    body {
      margin: 0;
      padding: 0;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: "Contrail One", sans-serif;
      overflow: hidden;
      background-image: url('https://images.squarespace-cdn.com/content/v1/57a64231b8a79b2fec260383/1719338118160-CFQEBSOHGDV7O0OYN8DK/image-asset.jpeg?format=2500w');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
    }

    nav {
      position: absolute;
      top: 20px;
      width: 100%;
      text-align: center;
      z-index: 2;
    }

    nav a {
      color: black;
      font-size: 24px;
      margin: 0 30px;
      text-decoration: none;
      letter-spacing: 2px;
      transition: color 0.3s ease;
    }

    nav a:hover {
      color: red;
    }

    .centered-text {
      position: absolute;
      z-index: 2;
      color: white;
      font-size: 60px;
      text-align: center;
    }
  </style>
</head>
<body>
  <!-- Navigation -->
  <nav>
    <a href="/about">About</a>
    <a href="/projects">Projects</a>
    <a href="#films">Films</a>
    <a href="/contact">Contact</a>
  </nav>

  <!-- Center Text -->
  <div class="centered-text">Justin Burns</div>

  <!-- Connect Wallet Button -->
  <div style="position: absolute; bottom: 40px; z-index: 2; text-align: center; width: 100%;">
    <button id="connectWallet" class="btn btn-dark btn-lg">Connect Wallet</button>
  </div>

  <!-- Optional footer include (if using EJS) -->
  <%- include('partials/footer') %>

  <!-- Abstract animation or visual script -->
  <script src="/scripts/glitchEffect.js"></script>

  <!-- Wallet Connect Logic -->
  <script>
    document.getElementById("connectWallet").addEventListener("click", async function () {
      if (typeof window.ethereum !== "undefined") {
        try {
          const accounts = await window.ethereum.request({ method: "eth_requestAccounts" });
          const address = accounts[0];
          console.log("ðŸŸ¢ Wallet Connected:", address);

          this.textContent = "Connected âœ…";
          this.classList.add("btn-success");
        } catch (err) {
          console.error("ðŸ›‘ Wallet connection failed:", err);
          alert("Wallet connection was cancelled or failed.");
        }
      } else {
        alert("MetaMask is not installed. Please install it to use wallet features.");
      }
    });
  </script>
</body>
</html>
